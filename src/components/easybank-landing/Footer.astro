---
import Button from "./Button.astro";
import IconFacebook from "./Icons/IconFacebook.astro";
import IconInstagram from "./Icons/IconInstagram.astro";
import IconPinterest from "./Icons/IconPinterest.astro";
import IconTwitter from "./Icons/IconTwitter.astro";
import IconYoutube from "./Icons/IconYoutube.astro";
---

<footer class='bg-blue-950 text-white py-10'>
  <section class='wrapper max-sm:space-y-8 layout-grid'>
    <div class='flex justify-center footer__logo h-6 sm:justify-start'>
      <img
        src='/easybank-landing/images/logo-white.svg'
        alt='Logo landing'
      />
    </div>
    <div class='flex gap-2 justify-center sm:justify-start sm:items-end footer__icons'>
      <IconFacebook class='hover:text-emerald-400 hover:cursor-pointer max-sm:!size-7' />
      <IconYoutube class='hover:text-emerald-400 hover:cursor-pointer max-sm:!size-7' />
      <IconTwitter class='hover:text-emerald-400 hover:cursor- max-sm:!size-7' />
      <IconPinterest class='hover:text-emerald-400 hover:cursor-pointer max-sm:!size-7' />
      <IconInstagram class='hover:text-emerald-400 hover:cursor-pointer max-sm:!size-7' />
    </div>
    <div class='px-4 flex flex-col text-center sm:text-start sm:grid sm:grid-cols-2 footer__links'>
      <div class='flex flex-col'>
        <a
          class='hover:text-emerald-400 text-gray-300 py-2'
          href='#'
          >About Us</a
        >
        <a
          class='hover:text-emerald-400 text-gray-300 py-2'
          href='#'
          >Contact</a
        >
        <a
          class='hover:text-emerald-400 text-gray-300 py-2'
          href='#'
          >Blog</a
        >
      </div>
      <div class='flex flex-col'>
        <a
          class='hover:text-emerald-400 text-gray-300 py-2'
          href='#'
          >Careers</a
        >
        <a
          class='hover:text-emerald-400 text-gray-300 py-2'
          href='#'
          >Suport</a
        >
        <a
          class='hover:text-emerald-400 text-gray-300 py-2'
          href='#'
          >Privacy Policy</a
        >
      </div>
    </div>

    <div class='flex flex-col items-center gap-4 sm:items-end sm:justify-between footer__copyright'>
      <Button class='!bg-green-600'>Request invite</Button>
      <p class='text-center text-gray-300'>
        Copyright {new Date().getFullYear()} All Rights Reserved
      </p>
    </div>
  </section>
</footer>

<style>
  @media (min-width: 640px) {
    .layout-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      grid-template-rows: repeat(2, 1fr);
      gap: 12px;
    }
    .footer__email {
      grid-row: 1/2;
      grid-column: 4/5;
    }
    .footer__links {
      grid-row: 1/3;
      grid-column: 2/4;
    }
    .footer__icons {
      grid-row: 2/3;
      grid-column: 1/2;
    }
    .footer__logo {
      grid-row: 1/2;
      grid-column: 1/2;
    }
    .footer__copyright {
      grid-row: 1/3;
      grid-column: 4/5;
    }
  }
</style>
