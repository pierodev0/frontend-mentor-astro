---
interface Props {
  position: string;
  description: string;
  image: string;
  name: string;
}
const { image, description, position, name } = Astro.props;
---

<article class="space-y-6 px-6 py-8">
  <div>
    <img src={image} alt=`Image of ${image}` class="mx-auto size-16 bg-red-400 rounded-full">
  </div>
  <div class="text-center space-y-6">
    <p class="text-gray-600 ">{description}</p>
    <div class="space-y-2">
        <p class="font-black text-shadow font-serif text-gray-800">{name}</p>
        <p class="text-gray-500">{position}</p>
    </div>
  </div>
</article>
