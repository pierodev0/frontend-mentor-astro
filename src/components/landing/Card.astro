---
interface Props {
  title: string;
  description: string;
  image: string;
  href: string
}

const { title, description, image,href } = Astro.props;
---

<article
  class="bg-[#23262D] transition-transform duration-300 ease-out hover:scale-[1.03] cursor-pointer text-white border border-white/20"
>
  <a href={href} class="flex h-full flex-col">
    <figure class="">
      <img src={image} alt={title} class="aspect-video object-cover w-full" />
    </figure>
    <div class="px-5 py-3 space-y-2">
      <h3 class="text-2xl font-bold">{title}</h3>
      <p class="text-gray-300">{description}</p>
    </div></a
  >
</article>
